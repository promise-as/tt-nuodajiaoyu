@-webkit-keyframes lanimation {
from {
    height: 12rpx;
}
50% {
    height: 22rpx;
}
to {
    height: 12rpx;
}
}
.tag {
  position: absolute;
  left: 24rpx;
  top: 54rpx;
}
.tag .tag-box {
  height: 40rpx;
  line-height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
}
.tag .tag-box .tag-l {
  display: inline-block;
  background-image: -webkit-linear-gradient(right, #f9a75e 0%, #f8d685 100%);
  background-image: linear-gradient(270deg, #f9a75e 0%, #f8d685 100%);
  border-radius: 20rpx;
  padding-right: 10rpx;
  padding-left: 10rpx;
  font-size: 0;
}
.tag .tag-box .tag-l .txt {
  padding-left: 28rpx;
  font-size: 24rpx;
  color: #fff;
  background: url(data:image/png;base64,) no-repeat left center;
  background-size: 22rpx auto;
}
.tag .tag-box .tag-r {
  display: inline-block;
  font-size: 24rpx;
  color: #fff;
  padding: 0 16rpx 0 16rpx;
}
.tag .tag-box.tag-2 .tag-l {
  background-image: -webkit-linear-gradient(right, #e31c1b 0%, #fe523a 100%);
  background-image: linear-gradient(270deg, #e31c1b 0%, #fe523a 100%);
}
.tag .tag-box.tag-2 .tag-l .txt {
  background: none;
  padding: 0;
}
.tag .tag-box.tag-2 .icon-live {
  display: inline-block;
}
.tag .tag-box.tag-2 .icon-live text {
  display: inline-block;
  margin-right: 4rpx;
  width: 4rpx;
  height: 12rpx;
  background-color: #fff;
  border-radius: 2rpx;
  -webkit-animation: lanimation 1s linear infinite;
          animation: lanimation 1s linear infinite;
  -webkit-animation-delay: 0.6s;
          animation-delay: 0.6s;
}
.tag .tag-box.tag-2 .icon-live text.live-2 {
  -webkit-animation-delay: 0.8s;
          animation-delay: 0.8s;
}
.tag .tag-box.tag-2 .icon-live text.live-3 {
  -webkit-animation-delay: 1s;
          animation-delay: 1s;
}
.tag .tag-box.tag-3 .tag-l {
  background-image: -webkit-linear-gradient(right, #61cd78 0%, #a6dca0 100%);
  background-image: linear-gradient(270deg, #61cd78 0%, #a6dca0 100%);
}
.tag .tag-box.tag-3 .tag-l .txt {
  background-image: url(data:image/png;base64,);
}

