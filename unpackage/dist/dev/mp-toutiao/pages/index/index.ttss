.banner {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.banner swiper {
  width: 690rpx;
  height: 340rpx;
}
.banner swiper image {
  width: 690rpx;
  height: 340rpx;
  border-radius: 20rpx;
}
.banner swiper .wx-swiper-dot-active {
  border: 1rpx solid #fff;
}
.banner-near {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  position: relative;
}
.banner-near .pages-box {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 86rpx;
  height: 48rpx;
  line-height: 44rpx;
  border-radius: 24rpx;
  border: solid 2rpx #e6e6e6;
  font-size: 26rpx;
  color: #999;
  text-align: center;
}
.banner-near .pages-box.active {
  color: #333;
}
.banner-near swiper {
  width: 690rpx;
  height: 480rpx;
}
.banner-near swiper .school-card {
  padding: 0;
}
.live-list {
  padding-bottom: 30rpx;
}
.live-list .live-tab {
  padding-top: 20rpx;
}
.live-list .live-tab .tab {
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
  font-size: 36rpx;
  color: #999;
  position: relative;
  padding-right: 20rpx;
  margin-right: 20rpx;
}
.live-list .live-tab .tab.active {
  color: #333;
  font-weight: bold;
}
.live-list .live-tab .tab:after {
  content: '';
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -16rpx;
  width: 4rpx;
  background-color: #ddd;
  height: 32rpx;
}
.live-list .live-tab .tab:nth-last-child(1):after {
  display: none;
}
.school-card {
  width: 690rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}
.school-card:nth-last-child(1) {
  border: none;
}
.school-card image {
  width: 690rpx;
  height: 340rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}
.school-card .txt {
  position: relative;
  padding-bottom: 10rpx;
}
.school-card .txt .h3 {
  width: 465rpx;
  font-size: 32rpx;
  line-height: 1.6;
  margin-bottom: 10rpx;
  font-weight: bold;
}
.school-card .txt .time {
  font-size: 28rpx;
}
.school-card .txt .time text {
  display: inline-block;
  margin-right: 20rpx;
}
.school-card .txt .btn {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  width: 179rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background-image: -webkit-linear-gradient(right, #1d7be4 0%, #78befd 100%);
  background-image: linear-gradient(-90deg, #1d7be4 0%, #78befd 100%);
  box-shadow: 0 7rpx 10rpx 0 rgba(32, 124, 228, 0.25);
  border-radius: 40rpx;
}

