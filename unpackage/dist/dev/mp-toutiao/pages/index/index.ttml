<view class="content"><block tt:if="{{bannerList.length>0}}"><view class="banner bgw mb"><swiper circular="true" indicator-dots="{{false}}" autoplay="{{false}}" interval="{{3000}}" duration="{{1000}}"><block tt:for="{{bannerList}}" tt:for-item="item" tt:for-index="index" tt:key="index"><swiper-item data-event-opts="{{[['tap',[['goDetail',['$0','$1'],[[['bannerList','',index,'id']],[['bannerList','',index,'state']]]]]]]}}" bindtap="__e"><image src="{{item.pic}}" mode="scaleToFill"></image></swiper-item></block></swiper></view></block><block tt:if="{{topList.length>0}}"><view class="banner-near bgw mb"><view class="pages-box"><text class="active">{{bannerNearCurrent}}</text>/<text>{{bannerNearLength}}</text></view><swiper circular="true" indicator-dots="{{false}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}" data-event-opts="{{[['change',[['getCurrent',['$event']]]]]}}" bindchange="__e"><block tt:for="{{topList}}" tt:for-item="item" tt:for-index="index" tt:key="index"><swiper-item data-event-opts="{{[['tap',[['goDetail',['$0','$1'],[[['topList','',index,'id']],[['topList','',index,'state']]]]]]]}}" class="school-card" bindtap="__e"><image src="{{item.pic}}" mode="scaleToFill"></image><view class="txt"><view class="h3 one">{{item.title}}</view><view class="time"><ts-format-time vue-id="{{'8dda190e-1-'+index}}" time="{{item.starttime}}" bind:__l="__l"></ts-format-time></view><view class="btn">进入课堂</view></view></swiper-item></block></swiper></view></block><view class="live-list bgw"><view class="live-tab"><view data-event-opts="{{[['tap',[['getXnLive']]]]}}" class="{{(('tab')+' '+(active==0?'active':''))}}" bindtap="__e">精选</view><view data-event-opts="{{[['tap',[['getXnLive',[1,'bool']]]]]}}" class="{{(('tab')+' '+(active=='bool'?'active':''))}}" bindtap="__e">回看</view></view><view class="school-box"><block tt:for="{{liveList}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view data-event-opts="{{[['tap',[['goDetail',['$0','$1'],[[['liveList','',index,'id']],[['liveList','',index,'state']]]]]]]}}" class="school-card" bindtap="__e"><image src="{{item.pic}}" mode="scaleToFill"></image><view class="txt"><view class="h3 line2">{{item.title}}</view><view class="time"><ts-format-time vue-id="{{'8dda190e-2-'+index}}" time="{{item.starttime}}" bind:__l="__l"></ts-format-time></view><view class="btn">进入课堂</view></view><tag vue-id="{{'8dda190e-3-'+index}}" state="{{item.state}}" bind:__l="__l"></tag></view></block></view></view></view>