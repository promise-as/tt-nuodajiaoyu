<view class="content details"><block tt:if="{{!showVideo}}"><view class="public-con"><u-parse vue-id="ffacbe4e-1" content="{{detail.intro}}" bind:__l="__l"></u-parse></view></block><block tt:if="{{!showVideo}}"><view class="btn-box"><block tt:if="{{hasLogin&&detail.id}}"><view data-event-opts="{{[['tap',[['goLive']]]]}}" class="live-btn" bindtap="__e">{{btnTxt}}</view></block><block tt:if="{{!hasLogin}}"><button class="live-btn" open-type="getPhoneNumber" data-event-opts="{{[['tap',[['myLogin',['$event']]]]]}}" bindtap="__e">{{btnTxt}}</button></block></view></block><block tt:if="{{showVideo}}"><view class="back-con-box"><view class="h1 one bgw">{{detail.title}}</view><view class="video-box"><txv-video vue-id="ffacbe4e-2" vid="{{vid}}" autoplay="{{true}}" playerid="txv1" bind:__l="__l"></txv-video></view><view class="con bgw"><view class="lesson"><view class="tabs"><view data-event-opts="{{[['tap',[['onTabSwitch',[1]]]]]}}" class="{{(('tab')+' '+(tabId==1?'xn-tit-2':''))}}" bindtap="__e">课程简介</view><block tt:if="{{detail.fj}}"><view data-event-opts="{{[['tap',[['onTabSwitch',[2]]]]]}}" class="{{(('tab')+' '+(tabId==2?'xn-tit-2':''))}}" bindtap="__e">课程目录</view></block></view><view class="tab-card"><block tt:if="{{tabId==1}}"><view class="txt"><u-parse vue-id="ffacbe4e-3" content="{{detail.intro}}" bind:__l="__l"></u-parse></view></block><block tt:if="{{tabId==2}}"><view class="txt txt-2"><block tt:for="{{detail.fj}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view><view data-event-opts="{{[['tap',[['goChapter',['$0','$1','$2'],[[['detail.fj','',index,'backurl']],[['detail.fj','',index,'cid']],[['detail.fj','',index,'token']]]]]]]}}" class="list-box" bindtap="__e"><view class="title">{{"章节"+(index+1)+":"+item.title}}</view><view class="flex btm"><view class="time"><ts-format-time vue-id="{{'ffacbe4e-4-'+index}}" time="{{item.starttime}}" bind:__l="__l"></ts-format-time></view><view class="read flex"><num vue-id="{{'ffacbe4e-5-'+index}}" bind:__l="__l"></num>次学习</view></view></view></view></block></view></block></view></view></view></view></block></view>